<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvStockSymbol"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:text="stock" />

    <TextView
        android:id="@+id/tvStockPrice"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/tvStockSymbol"
        android:text="price" />

    <TextView
        android:id="@+id/tvPercentChangeWL"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/tvStockPrice"
        android:text="percent change" />

    <TextView
        android:id="@+id/tvVolume"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/tvPercentChangeWL"
        android:text="volume" />
</RelativeLayout>