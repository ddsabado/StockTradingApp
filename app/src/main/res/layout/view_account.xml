<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="13dp"
        android:background="#6075D6"
        android:fontFamily="sans-serif-black"
        android:text="Actual Balance:"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="13dp"
        android:background="#6075D6"
        android:fontFamily="sans-serif-black"
        android:text="Buying Power:"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvActualBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAccountId"
        android:layout_marginStart="30dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/textView9"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:text="sample"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvBuyingPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvActualBalance"
        android:layout_marginStart="30dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/textView10"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:text="sample"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonFundAccount"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="129dp"
        android:layout_marginTop="302dp"
        android:background="#DD3F51B5"
        android:fontFamily="sans-serif-medium"
        android:text="Fund Account"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonWithdrawFunds"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonFundAccount"
        android:layout_alignParentStart="true"
        android:layout_marginStart="129dp"
        android:layout_marginTop="17dp"
        android:background="#DD3F51B5"
        android:text="Withdraw Funds"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="86dp"
        android:background="#6075D6"
        android:fontFamily="sans-serif-black"
        android:text="Account ID:"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvAccountId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="86dp"
        android:layout_toEndOf="@+id/textView12"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:text="0001000100001"
        android:textSize="18sp" />
</RelativeLayout>