<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvStockSymbol2"
        android:layout_width="73dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="96dp"
        android:background="#DD3F51B5"
        android:fontFamily="sans-serif-black"
        android:text="STOCK"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tvStockPrice2"
        android:layout_width="94dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="96dp"
        android:layout_toEndOf="@+id/tvStockSymbol2"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif-black"
        android:text="PRICE"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tvPercentChangeWL2"
        android:layout_width="76dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="96dp"
        android:layout_toEndOf="@+id/tvStockPrice2"
        android:background="#DD3F51B5"
        android:fontFamily="sans-serif-black"
        android:text="PERCENT CHANGE"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tvVolume2"
        android:layout_width="87dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="95dp"
        android:layout_toEndOf="@+id/tvPercentChangeWL2"
        android:background="#FFFFFF"
        android:fontFamily="sans-serif-black"
        android:text="VOLUME"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="45dp"
        android:text="Stock Code:"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editTextStockCode"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/textView"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/buttonAddToWatchList"
        android:layout_width="179dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="33dp"
        android:layout_toEndOf="@+id/editTextStockCode"
        android:background="#DD3F51B5"
        android:text="Add to watch list"
        android:textColor="#FFFFFF" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_watchlist"
        android:layout_width="332dp"
        android:layout_height="560dp"
        android:layout_below="@+id/editTextStockCode"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="57dp" />
</RelativeLayout>